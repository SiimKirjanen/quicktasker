<mjml>
  <mj-head>
    <mj-title>Task New Public Comment Created</mj-title>
    <mj-attributes>
      <mj-all font-family="Helvetica, Arial, sans-serif"></mj-all>
      <mj-text font-size="16px" color="#000000"></mj-text>
      <mj-button
        background-color="#1E3A8A"
        color="#ffffff"
        border-radius="5px"
      ></mj-button>
    </mj-attributes>
  </mj-head>
  <mj-body>
    <mj-section background-color="#f0f0f0" padding="20px">
      <mj-column>
        <mj-text
          font-size="20px"
          color="#1E3A8A"
          font-family="Helvetica, Arial, sans-serif"
        >
          Task Public Comment Created
        </mj-text>
        <mj-text
          font-size="16px"
          color="#000000"
          font-family="Helvetica, Arial, sans-serif"
        >
          Hello,
        </mj-text>
        <mj-text
          font-size="16px"
          color="#000000"
          font-family="Helvetica, Arial, sans-serif"
        >
          A new public comment has been created in task.
        </mj-text>
        <mj-text
          font-size="16px"
          color="#000000"
          font-family="Helvetica, Arial, sans-serif"
        >
          <strong>Task Name:</strong> {{taskName}}
        </mj-text>
        <mj-text
          font-size="16px"
          color="#000000"
          font-family="Helvetica, Arial, sans-serif"
        >
          <strong>Board Name:</strong> {{boardName}}
        </mj-text>
        <mj-text
          font-size="16px"
          color="#000000"
          font-family="Helvetica, Arial, sans-serif"
        >
          <strong>Date:</strong> {{creationDate}}
        </mj-text>
        <mj-text
          font-size="16px"
          color="#000000"
          font-family="Helvetica, Arial, sans-serif"
        >
          <strong>Comment author:</strong> {{authorName}}
        </mj-text>
        <mj-text
          font-size="16px"
          color="#000000"
          font-family="Helvetica, Arial, sans-serif"
        >
          <strong>Comment:</strong> {{message}}
        </mj-text>
      </mj-column>
    </mj-section>
  </mj-body>
</mjml>
